<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Document</title>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10 text-white">
        <form action="/create" method="post">
          <input name="title" class="block w-full rounded-md outlin-none px-5 py-2 bg-zinc-800" type="text" placeholder="Title">
          <textarea name="details" class="block w-full rounded-md outlin-none px-5 mt-2 py-2 bg-zinc-800 resize-none" placeholder="Write your tasks"></textarea>
          <input type="submit" class="mt-2 bg-blue-600 px-5 py-2 rounded-md" value="Create Task">
        </form>
      </div>
      <div class="tasks p-10 flex gap-3 flex-wrap">
        <% if(arr.length > 0) { %>
        <%   arr.forEach(function(elem){ %>
            <div class="task w-72 px-3 py-4 bg-zinc-800 rounded-md">
                <h1 class="text-white text-3xl tracking-tighter"><%= elem.title %></h1>
                <% if (elem.data.length < 16){ %>
                    <h2 class="text-white text-xl tracking-tighter"><%= elem.data %></h2>
                <% } else { %>
                    <h2 class="text-white text-xl tracking-tighter">
                      <%= elem.data.substring(0,16)+"..." %>
                    </h2>
                <% } %>
                <div class="links flex justify-between">
                  <a href="/file/<%= elem.title %>" class="text-blue-500 inline-block mt-3">Read More</a>
                  <a href="/delete/<%= elem.title %>" class="text-red-500 mr-2 inline-block mt-3">Delete</a>
                  <a href="/edit/<%= elem.title %>" class="text-green-500 mr-5 inline-block mt-3">Edit</a>
                </div>
            </div>
        <% })} else { %>
            <h3 class="text-zinc-600">no tasks yet..</h3>
        <% } %>
      </div>
    </div>
</body>
</html>